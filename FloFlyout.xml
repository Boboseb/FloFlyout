	<CheckButton name="FloFlyoutButtonTemplate" virtual="TRUE" inherits="ActionButtonTemplate, SecureActionButtonTemplate">
		<Size x="28" y="28"/>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton")
				_G[self:GetName().."Count"]:SetPoint("BOTTOMRIGHT", 0, 0)
				self.maxDisplayCount = 99
				_G[self:GetName().."Icon"]:SetTexCoord(4/64, 60/64, 4/64, 60/64)
			</OnLoad>
			<OnEnter function="FloFlyoutButton_SetTooltip" />
			<OnLeave>
				GameTooltip:Hide()
			</OnLeave>
			<OnDragStart function="FloFlyoutButton_OnDragStart" />
			<OnReceiveDrag function="FloFlyoutButton_OnReceiveDrag" />
			<OnMouseUp function="FloFlyoutButton_OnReceiveDrag" />
			<PreClick>
				self:SetChecked(not self:GetChecked());
			</PreClick>
		</Scripts>
		<NormalTexture/>
	</CheckButton>

